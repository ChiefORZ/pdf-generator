{
  "name": "@chieforz/pdf-generator",
  "version": "1.4.1",
  "repository": "git@github.com:ChiefORZ/pdf-generator.git",
  "license": "MIT",
  "author": "ChiefORZ <seb.schaffernak@gmail.com>",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": "dist/bin/pdf-generator.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "node --import tsx --watch ./bin/pdf-generator",
    "lint": "eslint './src/**/*.{js,jsx,ts,tsx}' --fix",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "release": "release-it",
    "test": "npm-run-all test:*",
    "test:knip": "knip"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "prettier": "@chieforz/prettier-config",
  "eslintConfig": {
    "extends": "@chieforz/eslint-config-tslint-base"
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "fast-glob": "^3.3.1",
    "pdf-lib": "^1.17.1",
    "puppeteer-chromium-resolver": "^20.0.0",
    "puppeteer-core": "^21.4.1",
    "puppeteer-report": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@chieforz/eslint-config-tslint-base": "^1.1.9",
    "@chieforz/prettier-config": "^1.1.9",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@release-it/conventional-changelog": "^7.0.2",
    "@types/conventional-changelog": "^3.1.4",
    "@types/debug": "^4.1.10",
    "@types/express": "^4.17.20",
    "@types/node": "^18.18.7",
    "@types/semver": "^7.5.4",
    "@types/yargs": "^17.0.29",
    "conventional-changelog": "^5.1.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "knip": "^2.38.4",
    "lint-staged": "^15.0.2",
    "npm-run-all": "^4.1.5",
    "release-it": "^16.2.1",
    "semver": "^7.5.4"
  },
  "engines": {
    "node": ">=18.17"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}