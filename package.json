{
  "name": "@chieforz/pdf-generator",
  "version": "1.6.0",
  "repository": "git@github.com:ChiefORZ/pdf-generator.git",
  "license": "MIT",
  "author": "ChiefORZ <seb.schaffernak@gmail.com>",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": "dist/bin/pdf-generator.js",
  "scripts": {
    "biome:check": "wireit",
    "biome:write": "wireit",
    "build": "wireit",
    "dev": "wireit",
    "precommit": "wireit",
    "prepare": "wireit",
    "release": "wireit",
    "test": "wireit",
    "test:knip": "wireit"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "biome check --write"
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "debug": "^4.4.0",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "locate-chrome": "^0.1.1",
    "pdf-lib": "^1.17.1",
    "puppeteer-chromium-resolver": "^23.0.0",
    "puppeteer-core": "^23.11.1",
    "puppeteer-report": "^3.1.0",
    "typescript": "^5.8.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@release-it/conventional-changelog": "^9.0.4",
    "@types/conventional-changelog": "^3.1.5",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.32",
    "@types/semver": "^7.7.0",
    "@types/yargs": "^17.0.33",
    "conventional-changelog": "^6.0.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "husky": "^9.1.7",
    "knip": "^5.50.5",
    "lint-staged": "^15.5.1",
    "npm-run-all2": "^7.0.2",
    "release-it": "^17.11.0",
    "semver": "^7.7.1",
    "tsx": "^4.19.3",
    "wireit": "^0.14.12"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": "^20"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "files": ["src/**/*", "tsconfig.json"],
      "clean": true,
      "output": ["dist/**"]
    },
    "dev": {
      "command": "node --import tsx --watch ./bin/pdf-generator",
      "files": ["src/**/*", "bin/pdf-generator"],
      "service": true
    },
    "biome:check": {
      "command": "biome check ./src",
      "files": ["src/**/*.{js,jsx,ts,tsx}"],
      "output": []
    },
    "biome:write": {
      "command": "biome check --write ./src"
    },
    "precommit": {
      "command": "lint-staged",
      "files": ["src/**/*"],
      "output": []
    },
    "prepare": {
      "command": "husky install"
    },
    "release": {
      "command": "release-it",
      "files": ["src/**/*", "package.json"],
      "output": []
    },
    "test": {
      "command": "npm-run-all test:*",
      "files": ["src/**/*"],
      "output": []
    },
    "test:knip": {
      "command": "knip",
      "files": ["src/**/*"],
      "output": []
    }
  }
}
